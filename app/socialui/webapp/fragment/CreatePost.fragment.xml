<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core">

  <Dialog
    id="createPostDialog"
    title="Create Post"
    draggable="true"
    resizable="true">

    <content>
      <VBox class="sapUiSmallMargin">
        <TextArea
          id="postContent"
          placeholder="What's on your mind?"
          rows="5"
          width="100%"/>
      </VBox>
    </content>

    <beginButton>
      <Button
        text="Post"
        type="Emphasized"
        press=".onSavePost"/>
    </beginButton>

    <endButton>
      <Button
        text="Cancel"
        press=".onCancelPost"/>
    </endButton>

  </Dialog>
</core:FragmentDefinition>
